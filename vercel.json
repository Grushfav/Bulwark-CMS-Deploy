{
  "version": 2,
  "builds": [
    {
      "src": "bulwark-cms-frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "https://bulwark-cms-backend.onrender.com/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/bulwark-cms-frontend/$1"
    }
  ],
  "env": {
    "VITE_API_URL": "https://bulwark-cms-backend.onrender.com/api",
    "VITE_FRONTEND_URL": "https://your-vercel-domain.vercel.app",
    "VITE_ENVIRONMENT": "vercel"
  }
}
